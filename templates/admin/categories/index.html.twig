{% extends 'base.html.twig' %}

{% block title %}Gestion des Catégories - Admin{% endblock %}

{% block body %}
<div class="container-fluid my-4">
    <div class="row">
        <!-- Sidebar -->
        {% include 'admin/components/sidebar.html.twig' %}

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="bi bi-bookmark text-gold"></i> Gestion des Catégories de Services
                </h1>
                <button class="btn btn-gold" data-bs-toggle="modal" data-bs-target="#newCategoryModal">
                    <i class="bi bi-plus-circle"></i> Nouvelle Catégorie
                </button>
            </div>

            <div class="row g-4">
                {% for category in categories %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        {% if category.image %}
                        <img src="{{ asset('uploads/categories/' ~ category.image) }}" 
                             class="card-img-top" 
                             alt="{{ category.name }}"
                             style="height: 200px; object-fit: cover;">
                        {% else %}
                        <div class="card-img-top bg-dark d-flex align-items-center justify-content-center" 
                             style="height: 200px;">
                            <i class="bi bi-bookmark-star text-gold" style="font-size: 4rem;"></i>
                        </div>
                        {% endif %}
                        
                        <div class="card-body">
                            <h5 class="card-title text-gold">{{ category.name }}</h5>
                            <p class="card-text text-muted">
                                {% if category.smallDescription|length > 100 %}
                                    {{ category.smallDescription|slice(0, 100) }}...
                                {% else %}
                                    {{ category.smallDescription }}
                                {% endif %}
                            </p>
                            <div class="mt-3">
                                <span class="badge bg-dark">
                                    {{ category.services|length }} service(s)
                                </span>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-white border-0">
                            <div class="btn-group w-100" role="group">
                                <button class="btn btn-warning" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#editCategoryModal{{ category.id }}">
                                    <i class="bi bi-pencil"></i> Modifier
                                </button>
                                <form method="post" 
                                      action="{{ path('admin_service_category_delete', {id: category.id}) }}" 
                                      style="display: inline; flex: 1;"
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-trash"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Modal Édition pour chaque catégorie -->
                <div class="modal fade" id="editCategoryModal{{ category.id }}" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form method="post" action="{{ path('admin_service_category_edit', {id: category.id}) }}" enctype="multipart/form-data">
                                <div class="modal-header bg-dark text-gold">
                                    <h5 class="modal-title"><i class="bi bi-pencil"></i> Modifier la Catégorie</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    {% if category.image %}
                                    <div class="mb-3 text-center">
                                        <img src="{{ asset('uploads/categories/' ~ category.image) }}" 
                                             alt="{{ category.name }}"
                                             class="img-thumbnail"
                                             style="max-width: 200px;">
                                        <p class="small text-muted mt-2">Image actuelle</p>
                                    </div>
                                    {% endif %}
                                    
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Nom <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="name" value="{{ category.name }}" required>
                                    </div>
                                    <div class="mb-3">
                        <label class="form-label fw-bold">Description <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="completDescription" rows="4" placeholder="Décrivez cette catégorie de services..." required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Résumer du service <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="smallDescription" rows="4" placeholder="résumez cette catégorie de services..." required></textarea>
                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Nouvelle image (optionnel)</label>
                                        <input type="file" class="form-control" name="image" accept="image/*">
                                        <small class="form-text text-muted">Laissez vide pour conserver l'image actuelle</small>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <button type="submit" class="btn btn-gold">
                                        <i class="bi bi-check"></i> Enregistrer
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle"></i> Aucune catégorie trouvée. 
                        Créez votre première catégorie pour commencer !
                    </div>
                </div>
                {% endfor %}
            </div>
        </main>
    </div>
</div>

<!-- Modal Nouvelle Catégorie -->
<div class="modal fade" id="newCategoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="{{ path('admin_service_category_new') }}" enctype="multipart/form-data">
                <div class="modal-header bg-dark text-gold">
                    <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Nouvelle Catégorie</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nom <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="name" placeholder="Ex: Coupe Homme" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Description <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="completDescription" rows="4" placeholder="Décrivez cette catégorie de services..." required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Résumer du service <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="smallDescription" rows="4" placeholder="résumez cette catégorie de services..." required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Image</label>
                        <input type="file" class="form-control" name="image" accept="image/*">
                        <small class="form-text text-muted">Formats acceptés : JPEG, PNG, GIF (5 Mo max)</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-gold">
                        <i class="bi bi-check"></i> Créer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .sidebar {
        background-color: var(--black) !important;
    }
    
    .sidebar .nav-link {
        padding: 0.75rem 1rem;
        margin-bottom: 0.25rem;
        border-left: 3px solid transparent;
        transition: all 0.3s;
    }
    
    .sidebar .nav-link:hover {
        background-color: var(--dark-gray);
        border-left-color: var(--gold);
    }
    
    .sidebar .nav-link.active {
        background-color: var(--dark-gray);
        border-left-color: var(--gold);
        color: var(--gold) !important;
    }
</style>
{% endblock %}
