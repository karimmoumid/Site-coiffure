{% extends 'base.html.twig' %}

{% block title %}{{ service.name }} - Détails{% endblock %}

{% block body %}
<section class="hero-section">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-white">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-gold">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_services') }}" class="text-gold">Services</a></li>
                {% if service.category %}
                <li class="breadcrumb-item">
                    <a href="{{ path('app_service_category', {id: service.category.id}) }}" class="text-gold">
                        {{ service.category.name }}
                    </a>
                </li>
                {% endif %}
                <li class="breadcrumb-item active text-white">{{ service.name }}</li>
            </ol>
        </nav>
        <h1 class="display-4 fw-bold">{{ service.name }}</h1>
    </div>
</section>

<div class="container my-5">
    <div class="row g-4">
        <!-- Image et informations principales -->
        <div class="col-lg-6">
            {% if service.image %}
            <img src="{{ asset('uploads/services/' ~ service.image.path) }}" 
                 class="img-fluid rounded shadow-lg w-100" 
                 alt="{{ service.name }}"
                 style="max-height: 500px; object-fit: cover;">
            {% else %}
            <div class="bg-gradient rounded shadow-lg d-flex align-items-center justify-content-center" 
                 style="height: 500px; background: linear-gradient(135deg, #000 0%, #1a1a1a 100%);">
                <i class="bi bi-star-fill text-gold" style="font-size: 8rem;"></i>
            </div>
            {% endif %}
        </div>
        
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="text-gold mb-0">{{ service.name }}</h2>
                        <span class="badge badge-gold fs-3">{{ service.price }} €</span>
                    </div>
                    
                    {% if service.category %}
                    <p class="text-muted mb-3">
                        <i class="bi bi-bookmark"></i> 
                        Catégorie : 
                        <a href="{{ path('app_service_category', {id: service.category.id}) }}" 
                           class="text-gold text-decoration-none">
                            {{ service.category.name }}
                        </a>
                    </p>
                    {% endif %}
                    
                    <div class="mb-4">
                        <span class="badge bg-dark fs-5">
                            <i class="bi bi-clock"></i> Durée : {{ service.duration }} minutes
                        </span>
                    </div>
                    
                    <h4 class="text-black mb-3">
                        <i class="bi bi-text-left"></i> Description
                    </h4>
                    <p class="lead">{{ service.description }}</p>
                    
                    <hr class="my-4">
                    
                    <div class="d-grid gap-3">
                        <a href="{{ path('app_appointment') }}" class="btn btn-gold btn-lg">
                            <i class="bi bi-calendar-plus"></i> Réserver ce service
                        </a>
                        {% if service.category %}
                        <a href="{{ path('app_service_category', {id: service.category.id}) }}" 
                           class="btn btn-black">
                            <i class="bi bi-arrow-left"></i> Retour à la catégorie
                        </a>
                        {% else %}
                        <a href="{{ path('app_services') }}" class="btn btn-black">
                            <i class="bi bi-arrow-left"></i> Retour aux services
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Services similaires (même catégorie) -->
    {% if service.category and service.category.services|length > 1 %}
    <section class="mt-5">
        <h3 class="text-center section-title">Services similaires</h3>
        
        <div class="row g-4 mt-4">
            {% for similar in service.category.services %}
                {% if similar.id != service.id %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        {% if similar.image %}
                        <img src="{{ asset('uploads/services/' ~ similar.image.path) }}" 
                             class="card-img-top" 
                             alt="{{ similar.name }}"
                             style="height: 180px; object-fit: cover;">
                        {% else %}
                        <div class="card-img-top bg-dark d-flex align-items-center justify-content-center" 
                             style="height: 180px;">
                            <i class="bi bi-star text-gold" style="font-size: 2.5rem;"></i>
                        </div>
                        {% endif %}
                        
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="card-title mb-0">{{ similar.name }}</h6>
                                <span class="badge badge-gold">{{ similar.price }}€</span>
                            </div>
                            <p class="card-text small">
                                {% if similar.description|length > 60 %}
                                    {{ similar.description|slice(0, 60) }}...
                                {% else %}
                                    {{ similar.description }}
                                {% endif %}
                            </p>
                        </div>
                        
                        <div class="card-footer bg-white border-0">
                            <a href="{{ path('app_service_show', {id: similar.id}) }}" 
                               class="btn btn-black btn-sm w-100">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                        </div>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    </section>
    {% endif %}
</div>
{% endblock %}
