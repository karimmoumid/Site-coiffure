{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Services{% endblock %}

{% block body %}
<section class="hero-section">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-white">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-gold">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_services') }}" class="text-gold">Services</a></li>
                <li class="breadcrumb-item active text-white">{{ category.name }}</li>
            </ol>
        </nav>
        <h1 class="display-4 fw-bold mb-3">{{ category.name }}</h1>
    </div>
</section>

<div class="container my-5">
    <!-- Description de la catégorie -->
    <div class="card mb-5">
        <div class="card-body p-4">
            {% if category.image %}
            <div class="row">
                <div class="col-md-4">
                    <img src="{{ asset('uploads/categories/' ~ category.image.path) }}" 
                         class="img-fluid rounded shadow"
                         alt="{{ category.name }}">
                </div>
                <div class="col-md-8">
                    <h3 class="text-gold mb-3">
                        <i class="bi bi-info-circle"></i> Description
                    </h3>
                    <p class="lead">{{ category.description }}</p>
                </div>
            </div>
            {% else %}
            <h3 class="text-gold mb-3">
                <i class="bi bi-info-circle"></i> Description
            </h3>
            <p class="lead">{{ category.description }}</p>
            {% endif %}
        </div>
    </div>

    <!-- Liste des services -->
    <h2 class="text-center section-title mb-5">Services de cette catégorie</h2>
    
    <div class="row g-4">
        {% for service in category.services %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100">
                {% if service.image %}
                <img src="{{ asset('uploads/services/' ~ service.image.path) }}" 
                     class="card-img-top" 
                     alt="{{ service.name }}"
                     style="height: 200px; object-fit: cover;">
                {% else %}
                <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                     style="height: 200px; background: linear-gradient(135deg, #000 0%, #1a1a1a 100%);">
                    <i class="bi bi-star-fill text-gold" style="font-size: 3rem;"></i>
                </div>
                {% endif %}
                
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title mb-0">{{ service.name }}</h5>
                        <span class="badge badge-gold fs-6">{{ service.price }} €</span>
                    </div>
                    
                    <div class="mb-3">
                        <span class="badge bg-dark">
                            <i class="bi bi-clock"></i> {{ service.duration }} minutes
                        </span>
                    </div>
                    
                    <p class="card-text">
                        {% if service.description|length > 100 %}
                            {{ service.description|slice(0, 100) }}...
                        {% else %}
                            {{ service.description }}
                        {% endif %}
                    </p>
                </div>
                
                <div class="card-footer bg-white border-0">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_service_show', {id: service.id}) }}" 
                           class="btn btn-black">
                            <i class="bi bi-info-circle"></i> Détails
                        </a>
                        <a href="{{ path('app_appointment') }}" 
                           class="btn btn-gold">
                            <i class="bi bi-calendar-plus"></i> Réserver
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-warning text-center">
                <i class="bi bi-exclamation-triangle"></i> Aucun service disponible dans cette catégorie pour le moment.
            </div>
        </div>
        {% endfor %}
    </div>
    
    <!-- Bouton retour -->
    <div class="text-center mt-5">
        <a href="{{ path('app_services') }}" class="btn btn-black">
            <i class="bi bi-arrow-left"></i> Retour aux catégories
        </a>
    </div>
</div>
{% endblock %}
