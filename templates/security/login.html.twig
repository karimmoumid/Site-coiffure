{% extends 'base.html.twig' %}

{% block title %}Connexion - Salon Luxe{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; background-color: #111;">
        <div class="text-center mb-4">
            <h2 class="text-gold"><i class="bi bi-person-circle"></i> Connexion</h2>
        </div>

        {% if error %}
            <div class="alert alert-danger text-center">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="alert alert-info text-center">
                Connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-gold">Se déconnecter</a>
            </div>
        {% endif %}

        <form method="post" class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label text-white">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" 
                       class="form-control bg-dark text-white border-0" autocomplete="email" required autofocus>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label text-white">Mot de passe</label>
                <input type="password" name="_password" id="password" 
                       class="form-control bg-dark text-white border-0" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-gold w-100 mt-3">
                <i class="bi bi-lock-fill"></i> Se connecter
            </button>
        </form>

    </div>
</div>

<style>
    .text-gold { color: #d4af37 !important; }

    .btn-gold {
        background-color: #d4af37;
        color: #000;
        font-weight: bold;
        transition: all 0.3s;
    }

    .btn-gold:hover {
        background-color: #b5942f;
        color: #fff;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(212, 175, 55, 0.25);
        border-color: #d4af37;
    }

    body {
        background-color: #000;
    }

    .card {
        border-radius: 1rem;
    }
</style>
{% endblock %}
