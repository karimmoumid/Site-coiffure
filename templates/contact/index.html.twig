{% extends 'base.html.twig' %}

{% block title %}Contact - Salon Luxe{% endblock %}

{% block body %}
<section class="hero-section">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">
            <span class="text-gold">Contactez-nous</span>
        </h1>
        <p class="lead">Nous sommes à votre écoute</p>
    </div>
</section>

<div class="container my-5">
    <div class="row g-4">
        <!-- Formulaire de contact -->
        <div class="col-lg-7">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center py-4">
                    <h3 class="mb-0">
                        <i class="bi bi-envelope"></i> Envoyez-nous un message
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label fw-bold">
                                    <i class="bi bi-person"></i> Nom complet <span class="text-danger">*</span>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="name" 
                                       name="name" 
                                       placeholder="Votre nom"
                                       required>
                            </div>
                            
                            <div class="col-md-6">
                                <label for="email" class="form-label fw-bold">
                                    <i class="bi bi-envelope"></i> Email <span class="text-danger">*</span>
                                </label>
                                <input type="email" 
                                       class="form-control" 
                                       id="email" 
                                       name="email" 
                                       placeholder="votre@email.com"
                                       required>
                            </div>
                            
                            <div class="col-12">
                                <label for="subject" class="form-label fw-bold">
                                    <i class="bi bi-tag"></i> Sujet <span class="text-danger">*</span>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="subject" 
                                       name="subject" 
                                       placeholder="Sujet de votre message"
                                       required>
                            </div>
                            
                            <div class="col-12">
                                <label for="message" class="form-label fw-bold">
                                    <i class="bi bi-chat-left-text"></i> Message <span class="text-danger">*</span>
                                </label>
                                <textarea class="form-control" 
                                          id="message" 
                                          name="message" 
                                          rows="6" 
                                          placeholder="Votre message..."
                                          required></textarea>
                            </div>
                            
                            <div class="col-12">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-gold btn-lg">
                                        <i class="bi bi-send"></i> Envoyer le message
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Informations de contact -->
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header text-center py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle"></i> Nos Coordonnées
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5 class="text-gold">
                            <i class="bi bi-geo-alt-fill"></i> Adresse
                        </h5>
                        <p class="mb-0">
                            123 Rue de la Beauté<br>
                            75001 Paris, France
                        </p>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="text-gold">
                            <i class="bi bi-telephone-fill"></i> Téléphone
                        </h5>
                        <p class="mb-0">
                            <a href="tel:+33123456789" class="text-decoration-none text-dark">
                                +33 1 23 45 67 89
                            </a>
                        </p>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="text-gold">
                            <i class="bi bi-envelope-fill"></i> Email
                        </h5>
                        <p class="mb-0">
                            <a href="mailto:contact@salonluxe.fr" class="text-decoration-none text-dark">
                                contact@salonluxe.fr
                            </a>
                        </p>
                    </div>
                    
                    <div class="mb-0">
                        <h5 class="text-gold">
                            <i class="bi bi-clock-fill"></i> Horaires
                        </h5>
                        <p class="mb-1"><strong>Lundi - Vendredi :</strong> 9h - 19h</p>
                        <p class="mb-1"><strong>Samedi :</strong> 9h - 18h</p>
                        <p class="mb-0"><strong>Dimanche :</strong> Fermé</p>
                    </div>
                </div>
            </div>
            
            <!-- Réseaux sociaux -->
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-4">
                    <h5 class="text-gold mb-3">
                        <i class="bi bi-share"></i> Suivez-nous
                    </h5>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="btn btn-dark btn-lg">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="btn btn-dark btn-lg">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-dark btn-lg">
                            <i class="bi bi-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Google Map (exemple) -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-map"></i> Notre Emplacement
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div style="height: 400px; background: linear-gradient(135deg, #000 0%, #1a1a1a 100%); display: flex; align-items: center; justify-content: center;">
                        <div class="text-center text-white">
                            <i class="bi bi-geo-alt-fill text-gold" style="font-size: 4rem;"></i>
                            <p class="mt-3">123 Rue de la Beauté, 75001 Paris</p>
                            <small class="text-gold">Intégrez ici votre carte Google Maps</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: var(--gold);
        box-shadow: 0 0 0 0.2rem rgba(255, 215, 0, 0.25);
    }
</style>
{% endblock %}
